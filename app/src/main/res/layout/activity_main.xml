<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".MainActivity2">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Device Sensors"
            app:titleCentered="false"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSwitchToMap"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:text="View Map"
                app:icon="@drawable/ic_map"
                app:iconGravity="end"
                app:iconTint="?attr/colorOnPrimary" />

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Your existing sensor content here -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="WiFi scanning status"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

            <EditText
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Enter room name"
                android:inputType="text" />

            <Button
                android:id="@+id/actionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Save Room Data" />

            <TableLayout
                android:id="@+id/wifiTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:stretchColumns="*" />

            <!-- Your sensor data displays -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sensor Data"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <!-- Accelerometer Data -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Accelerometer (m/s²)"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="X:" />
                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Y:" />
                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Z:" />
                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>
                    </TableLayout>

                    <!-- Gyroscope Data -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Gyroscope (rad/s)"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="X:" />
                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Y:" />
                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Z:" />
                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>
                    </TableLayout>

                    <!-- Magnetic Field Data -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Magnetic Field (μT)"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="X:" />
                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Y:" />
                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Z:" />
                            <TextView
                                android:id="@+id/textView23"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>
                    </TableLayout>

                    <!-- Orientation Data -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Orientation (degrees)"
                        android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Azimuth:" />
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Pitch:" />
                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="Roll:" />
                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="0.00" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for quick access to map -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Go to Map"
        app:backgroundTint="?attr/colorPrimary"
        app:srcCompat="@drawable/ic_map"
        app:tint="?attr/colorOnPrimary" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>